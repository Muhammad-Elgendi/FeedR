<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.FeedsViewController">

    <padding>
        <javafx.geometry.Insets bottom="10" left="15" right="10" top="15" />
    </padding>

    <JFXTextField fx:id="link" labelFloat="true" prefWidth="300.0" promptText="link" maxWidth="300" />

    <HBox alignment="CENTER" spacing="15">
        <JFXButton text="Create" onAction="#createFeed"/>

        <JFXButton text="Update" onAction="#updateFeed"/>

        <JFXButton text="Delete" onAction="#deleteFeed"/>
    </HBox>

    <TableView fx:id="tableView">
        <columns>
            <TableColumn minWidth="100" text="Link" fx:id="linkColumn">

            </TableColumn>
            <TableColumn minWidth="100" text="Addition date" fx:id="Addition_dateColumn">

            </TableColumn>
        </columns>
    </TableView>
    <JFXButton id="backbtn" graphicTextGap="10.0" text="Back" onAction="#direct_To_All_Pages_View">
        <graphic>
            <FontAwesomeIconView fill="black" glyphName="ARROW_CIRCLE_ALT_LEFT" size="30.0" strokeType="OUTSIDE" textAlignment="CENTER" />
        </graphic>
    </JFXButton>
    
    <padding>
        <javafx.geometry.Insets bottom="14" top="15" />
    </padding>
</VBox>
